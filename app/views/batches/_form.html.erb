<%= simple_form_for(@batch) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :brew_date %>
    <%= f.input :bottle_date %>
    <%= f.input :image %>
    <%= f.input :notes %>
    <%#= f.association :user_id %>
    <%#= f.association :recipe_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
