<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Recipe #<%= @recipe.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @recipe.name %></dd>

              <dt>Flav profile</dt>
              <dd><%= @recipe.flav_profile %></dd>

              <dt>Recipe type</dt>
              <dd><%= @recipe.recipe_type %></dd>

              <dt>Brewery name</dt>
              <dd><%= @recipe.brewery_name %></dd>

              <dt>Description</dt>
              <dd><%= @recipe.description %></dd>

              <dt>Label</dt>
              <dd><%= @recipe.label %></dd>

              <dt>User</dt>
              <dd><%= @recipe.user_id %></dd>

              <dt>Style</dt>
              <dd><%= @recipe.style_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), recipes_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_recipe_path(@recipe), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @recipe, method: :delete, data: { confirm: "Do you really want to delete this recipe?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
